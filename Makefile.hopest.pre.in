
# This file is part of con4m
# Use `include /path/to/Makefile.con4m.mk' in your Makefile
# to use con4m in your project without autotools

prefix = @prefix@
exec_prefix = @exec_prefix@
con4m_sysconfdir = @sysconfdir@

@CON4M_SC_MK_INCLUDE@
@CON4M_P4EST_MK_INCLUDE@

# CON4M_CC and CON4M_CFLAGS may not be necessary for your project
CON4M_CC = @CC@
CON4M_CFLAGS = @CFLAGS@

# These pull in p4est but none of its dependencies
CON4M_PKG_CPPFLAGS = -I@includedir@
CON4M_PKG_LDFLAGS = -L@libdir@
CON4M_PKG_LIBS = -lcon4m

# These pull in everything needed by con4m
CON4M_CPPFLAGS = @CPPFLAGS@ \
  $(SC_PKG_CPPFLAGS) $(P4EST_PKG_CPPFLAGS) $(CON4M_PKG_CPPFLAGS)
CON4M_LDFLAGS = @LDFLAGS@ \
  $(SC_PKG_LDFLAGS) $(P4EST_PKG_LDFLAGS) $(CON4M_PKG_LDFLAGS)
CON4M_LIBS = $(CON4M_PKG_LIBS) $(P4EST_PKG_LIBS) $(SC_PKG_LIBS) @LIBS@
